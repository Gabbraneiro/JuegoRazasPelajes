<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageCedica"
        android:layout_width="434dp"
        android:layout_height="347dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="237dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/cedica"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="114sp"
        tools:layout_editor_absoluteY="132sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="527dp"
        android:layout_height="116dp"
        android:layout_alignStart="@+id/imageCedica"
        android:layout_alignLeft="@+id/imageCedica"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-21dp"
        android:layout_marginLeft="-21dp"
        android:layout_marginTop="105dp"
        android:text="@string/title"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        tools:layout_editor_absoluteX="100sp"
        tools:layout_editor_absoluteY="68sp" />

    <Button
        android:id="@+id/buttonRecognition"
        android:layout_width="390dp"
        android:layout_height="121dp"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:background="#ffbf40"
        android:text="@string/buttonRecognition"
        tools:layout_editor_absoluteX="417sp"
        tools:layout_editor_absoluteY="155sp" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="388dp"
        android:layout_height="118dp"
        android:layout_alignStart="@+id/buttonRecognition"
        android:layout_alignLeft="@+id/buttonRecognition"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="130dp"
        android:background="#ffbf40"
        android:text="@string/buttonPlay"
        tools:layout_editor_absoluteX="417sp"
        tools:layout_editor_absoluteY="237sp" />

    <ImageButton
        android:id="@+id/imageConfigurate"
        android:layout_width="109dp"
        android:layout_height="103dp"
        android:layout_alignTop="@+id/imageHelp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-1sp"
        android:layout_marginEnd="0sp"
        android:layout_marginRight="0sp"
        android:background="#ffffff"
        android:contentDescription="@string/imageSettings"
        app:srcCompat="@drawable/configuracion600p"
        tools:layout_editor_absoluteX="602sp"
        tools:layout_editor_absoluteY="16sp" />

    <ImageButton
        android:id="@+id/imageHelp"
        android:layout_width="106dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77sp"
        android:layout_marginLeft="77sp"
        android:layout_marginTop="10sp"
        android:background="#ffffff"
        android:contentDescription="@string/imageHelp"
        app:srcCompat="@drawable/ayuda600p"
        tools:layout_editor_absoluteX="54sp"
        tools:layout_editor_absoluteY="16sp" />

</RelativeLayout >
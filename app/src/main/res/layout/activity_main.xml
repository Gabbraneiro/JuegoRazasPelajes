<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageCedica"
        android:layout_width="194dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="132dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/cedica"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="114sp"
        tools:layout_editor_absoluteY="132sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageCedica"
        android:layout_alignLeft="@+id/imageCedica"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-7dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="81dp"
        android:text="@string/title"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        tools:layout_editor_absoluteX="100sp"
        tools:layout_editor_absoluteY="68sp" />

<ImageButton android:background="#ffffff"
    android:layout_height="wrap_content"
    android:layout_width="87sp"
    tools:layout_editor_absoluteY="16sp"
    tools:layout_editor_absoluteX="602sp"
    app:srcCompat="@drawable/configuracion"
    android:layout_marginTop="-1sp"
    android:id="@+id/imageConfigurate"
    android:contentDescription="@string/imageSettings"
    android:layout_marginRight="0sp"
    android:layout_marginEnd="0sp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/imageHelp"/>

<ImageButton
    android:background="#ffffff"
    android:layout_height="63sp"
    android:layout_width="wrap_content"
    tools:layout_editor_absoluteY="16sp"
    tools:layout_editor_absoluteX="54sp"
    app:srcCompat="@drawable/ayuda"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="77sp"
    android:layout_marginStart="57sp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/imageHelp"
    android:contentDescription="@string/imageHelp"/>

    <Button
        android:id="@+id/buttonRecognition"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:background="#ffbf40"
        android:text="@string/buttonRecognition"
        tools:layout_editor_absoluteX="417sp"
        tools:layout_editor_absoluteY="155sp" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/buttonRecognition"
        android:layout_alignLeft="@+id/buttonRecognition"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="33dp"
        android:background="#ffbf40"
        android:text="@string/buttonPlay"
        tools:layout_editor_absoluteX="417sp"
        tools:layout_editor_absoluteY="237sp" />

</RelativeLayout>
<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<ImageView
    android:background="#ffffff"
    android:layout_height="140dp"
    android:layout_width="194dp"
    tools:layout_editor_absoluteY="132sp"
    tools:layout_editor_absoluteX="114sp"
    tools:ignore="ContentDescription"
    app:srcCompat="@drawable/cedica"
    android:layout_marginTop="148dp"
    android:layout_marginLeft="128dp"
    android:layout_marginStart="128dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/imageCedica"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    tools:layout_editor_absoluteY="68sp"
    tools:layout_editor_absoluteX="100sp"
    android:layout_marginTop="96dp"
    android:layout_marginLeft="-16dp"
    android:layout_marginStart="-16dp"
    android:layout_alignParentTop="true"
    android:id="@+id/title"
    app:fontFamily="serif"
    android:textStyle="bold"
    android:textSize="30sp"
    android:textColor="#000000"
    android:text="@string/title"
    android:layout_alignLeft="@+id/imageCedica"
    android:layout_alignStart="@+id/imageCedica"/>

<ImageButton android:background="#ffffff"
    android:layout_height="wrap_content"
    android:layout_width="87sp"
    tools:layout_editor_absoluteY="16sp"
    tools:layout_editor_absoluteX="602sp"
    app:srcCompat="@drawable/configuracion"
    android:layout_marginTop="-1sp"
    android:id="@+id/imageConfigurate"
    android:contentDescription="@string/imageSettings"
    android:layout_marginRight="0sp"
    android:layout_marginEnd="0sp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/imageHelp"/>

<ImageButton
    android:background="#ffffff"
    android:layout_height="63sp"
    android:layout_width="wrap_content"
    tools:layout_editor_absoluteY="16sp"
    tools:layout_editor_absoluteX="54sp"
    app:srcCompat="@drawable/ayuda"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="77sp"
    android:layout_marginStart="57sp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/imageHelp"
    android:contentDescription="@string/imageHelp"/>

<Button
    android:background="#ffbf40"
    android:layout_height="51dp"
    android:layout_width="183dp"
    tools:layout_editor_absoluteY="155sp"
    tools:layout_editor_absoluteX="417sp"
    android:layout_marginTop="15dp"
    android:id="@+id/buttonRecognition"
    android:text="@string/buttonRecognition"
    android:layout_marginRight="92dp"
    android:layout_marginEnd="92dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/title"/>

<Button
    android:background="#ffbf40"
    android:layout_height="51dp"
    android:layout_width="183dp"
    tools:layout_editor_absoluteY="237sp"
    tools:layout_editor_absoluteX="417sp"
    android:layout_marginLeft="-1dp"
    android:layout_marginStart="-1dp"
    android:id="@+id/buttonPlay"
    android:text="@string/buttonPlay"
    android:layout_alignLeft="@+id/buttonRecognition"
    android:layout_alignStart="@+id/buttonRecognition"
    android:layout_marginBottom="61dp"
    android:layout_alignParentBottom="true"/>

</RelativeLayout>
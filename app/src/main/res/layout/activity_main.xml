<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/img_logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="212dp"
        android:layout_marginRight="212dp"
        app:srcCompat="@drawable/logo_app" />

    <ImageButton
        android:id="@+id/btn_conf"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        app:srcCompat="@drawable/config_regular" />

    <ImageButton
        android:id="@+id/btn_info"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/info_regular" />

    <ImageButton
        android:id="@+id/btn_jugar"
        android:layout_width="357dp"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="139dp"
        app:srcCompat="@drawable/jugar_regular" />

    <ImageButton
        android:id="@+id/btn_reconocimiento"
        android:layout_width="357dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        app:srcCompat="@drawable/reconocimiento_regular" />

    <ImageView
        android:id="@+id/img_logo_facultad"
        android:layout_width="495dp"
        android:layout_height="162dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="-282dp"
        android:layout_marginLeft="282dp"
        android:layout_marginBottom="48dp"
        android:layout_toEndOf="@+id/img_logo_app"
        android:layout_toRightOf="@+id/img_logo_app"
        app:srcCompat="@drawable/logo_facultad_informatica" />

    <ImageView
        android:id="@+id/img_cedica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cedica" />

    <ImageView
        android:id="@+id/img_unlp"
        android:layout_width="335dp"
        android:layout_height="162dp"
        android:layout_marginTop="590dp"
        app:srcCompat="@drawable/logo_unlp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >


    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="534dp"
        android:layout_height="248dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="#ffbf40" >

        <FrameLayout
            android:layout_width="532dp"
            android:layout_height="97dp"
            android:layout_marginTop="150sp">

            <!-- Caballo 1-->
            <ImageButton
                android:id="@+id/horse1"
                android:layout_width="125sp"
                android:layout_height="77dp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                app:srcCompat="@drawable/caballo_btn" />

            <!-- Caballo 2-->
            <ImageButton
                android:id="@+id/horse2"
                android:layout_width="125sp"
                android:layout_height="77dp"
                android:layout_marginStart="140sp"
                android:layout_marginLeft="140sp"
                app:srcCompat="@drawable/caballo_btn" />

            <!-- Caballo 3-->
            <ImageButton
                android:id="@+id/horse3"
                android:layout_width="125sp"
                android:layout_height="77dp"
                android:layout_marginStart="275sp"
                android:layout_marginLeft="275sp"
                app:srcCompat="@drawable/caballo_btn" />

            <!-- Caballo 4-->
            <ImageButton
                android:id="@+id/horse4"
                android:layout_width="125sp"
                android:layout_height="77dp"
                android:layout_marginStart="410sp"
                android:layout_marginLeft="410sp"
                app:srcCompat="@drawable/caballo_btn" />
        </FrameLayout>

        <!--Caballo grande-->
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="209dp"
            android:layout_height="122dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="160sp"
            android:layout_marginLeft="160sp"
            android:contentDescription="@string/caballo"
            app:srcCompat="@drawable/caballo" />

    </FrameLayout>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout"
        android:layout_alignRight="@+id/layout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="@string/buttonBack"
        android:background="#ffbf40" />
</RelativeLayout>
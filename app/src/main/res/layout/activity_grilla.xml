<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbf40">

    <!--Arriba izquierda-->
    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="@dimen/grilla_frame_width"
        android:layout_height="@dimen/grilla_frame_heigth"
        android:layout_marginTop="@dimen/grilla_frame_mt"
        android:layout_marginRight="@dimen/grilla_frame_mr"
        android:layout_toStartOf="@+id/frame2"
        android:layout_toLeftOf="@+id/frame2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grilla_imagen_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_ml"
            android:layout_marginTop="@dimen/grilla_imagen_mt"
            android:layout_marginRight="@dimen/grilla_imagen_mr"
            android:contentDescription="@string/caballo"
            app:srcCompat="@drawable/caballo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grilla_texto_ml"
            android:layout_marginTop="@dimen/grilla_texto_mt"
            android:text="@string/raza_x"
            android:textSize="@dimen/grilla_texto_size"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="@dimen/grilla_imagen_voz_width"
            android:layout_height="@dimen/grilla_imagen_voz_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_voz_ml"
            android:layout_marginTop="@dimen/grilla_imagen_voz_mt"
            android:contentDescription="@string/talking"
            app:srcCompat="@drawable/talking" />

    </FrameLayout>

    <!--Arriba medio-->
    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="@dimen/grilla_frame_width"
        android:layout_height="@dimen/grilla_frame_heigth"
        android:layout_marginTop="@dimen/grilla_frame_mt"
        android:layout_marginRight="@dimen/grilla_frame_mr"
        android:layout_toStartOf="@+id/frame3"
        android:layout_toLeftOf="@+id/frame3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grilla_imagen_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_ml"
            android:layout_marginTop="@dimen/grilla_imagen_mt"
            android:layout_marginRight="@dimen/grilla_imagen_mr"
            android:contentDescription="@string/caballo"
            app:srcCompat="@drawable/caballo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grilla_texto_ml"
            android:layout_marginTop="@dimen/grilla_texto_mt"
            android:text="@string/raza_x"
            android:textSize="@dimen/grilla_texto_size"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="@dimen/grilla_imagen_voz_width"
            android:layout_height="@dimen/grilla_imagen_voz_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_voz_ml"
            android:layout_marginTop="@dimen/grilla_imagen_voz_mt"
            android:contentDescription="@string/talking"
            app:srcCompat="@drawable/talking" />
    </FrameLayout>

    <!--Arriba derecha-->
    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="@dimen/grilla_frame_width"
        android:layout_height="@dimen/grilla_frame_heigth"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/grilla_frame_mt"
        android:layout_marginRight="@dimen/grilla_frame_mr">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grilla_imagen_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_ml"
            android:layout_marginTop="@dimen/grilla_imagen_mt"
            android:layout_marginRight="@dimen/grilla_imagen_mr"
            android:contentDescription="@string/caballo"
            app:srcCompat="@drawable/caballo" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grilla_texto_ml"
            android:layout_marginTop="@dimen/grilla_texto_mt"
            android:text="@string/raza_x"
            android:textSize="@dimen/grilla_texto_size"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="@dimen/grilla_imagen_voz_width"
            android:layout_height="@dimen/grilla_imagen_voz_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_voz_ml"
            android:layout_marginTop="@dimen/grilla_imagen_voz_mt"
            android:contentDescription="@string/talking"
            app:srcCompat="@drawable/talking" />
    </FrameLayout>

    <!--Abajo izquierda-->
    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="@dimen/grilla_frame_width"
        android:layout_height="@dimen/grilla_frame_heigth"
        android:layout_below="@+id/frame1"
        android:layout_marginTop="@dimen/grilla_frame_mt"
        android:layout_marginRight="@dimen/grilla_frame_mr"
        android:layout_toStartOf="@+id/frame5"
        android:layout_toLeftOf="@+id/frame5">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grilla_imagen_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_ml"
            android:layout_marginTop="@dimen/grilla_imagen_mt"
            android:layout_marginRight="@dimen/grilla_imagen_mr"
            android:contentDescription="@string/caballo"
            app:srcCompat="@drawable/caballo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grilla_texto_ml"
            android:layout_marginTop="@dimen/grilla_texto_mt"
            android:text="@string/raza_x"
            android:textSize="@dimen/grilla_texto_size"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="@dimen/grilla_imagen_voz_width"
            android:layout_height="@dimen/grilla_imagen_voz_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_voz_ml"
            android:layout_marginTop="@dimen/grilla_imagen_voz_mt"
            android:contentDescription="@string/talking"
            app:srcCompat="@drawable/talking" />
    </FrameLayout>

    <!--Abajo medio-->
    <FrameLayout
        android:id="@+id/frame5"
        android:layout_width="@dimen/grilla_frame_width"
        android:layout_height="@dimen/grilla_frame_heigth"
        android:layout_below="@+id/frame2"
        android:layout_marginTop="@dimen/grilla_frame_mt"
        android:layout_marginRight="@dimen/grilla_frame_mr"
        android:layout_toStartOf="@+id/frame6"
        android:layout_toLeftOf="@+id/frame6">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grilla_imagen_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_ml"
            android:layout_marginTop="@dimen/grilla_imagen_mt"
            android:layout_marginRight="@dimen/grilla_imagen_mr"
            android:contentDescription="@string/caballo"
            app:srcCompat="@drawable/caballo" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grilla_texto_ml"
            android:layout_marginTop="@dimen/grilla_texto_mt"
            android:text="@string/raza_x"
            android:textSize="@dimen/grilla_texto_size"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="@dimen/grilla_imagen_voz_width"
            android:layout_height="@dimen/grilla_imagen_voz_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_voz_ml"
            android:layout_marginTop="@dimen/grilla_imagen_voz_mt"
            android:contentDescription="@string/talking"
            app:srcCompat="@drawable/talking" />
    </FrameLayout>

    <!--Abajo derecha-->
    <FrameLayout
        android:id="@+id/frame6"
        android:layout_width="@dimen/grilla_frame_width"
        android:layout_height="@dimen/grilla_frame_heigth"
        android:layout_below="@+id/frame3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/grilla_frame_mt"
        android:layout_marginRight="@dimen/grilla_frame_mr">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grilla_imagen_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_ml"
            android:layout_marginTop="@dimen/grilla_imagen_mt"
            android:layout_marginRight="@dimen/grilla_imagen_mr"
            android:contentDescription="@string/caballo"
            app:srcCompat="@drawable/caballo" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grilla_texto_ml"
            android:layout_marginTop="@dimen/grilla_texto_mt"
            android:text="@string/raza_x"
            android:textSize="@dimen/grilla_texto_size"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="@dimen/grilla_imagen_voz_width"
            android:layout_height="@dimen/grilla_imagen_voz_heigth"
            android:layout_marginLeft="@dimen/grilla_imagen_voz_ml"
            android:layout_marginTop="@dimen/grilla_imagen_voz_mt"
            android:contentDescription="@string/talking"
            app:srcCompat="@drawable/talking" />
    </FrameLayout>

</RelativeLayout>